<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sheila.sci_fi.MainActivity">

    <fragment
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/universe_frag"
        android:name="com.example.sheila.sci_fi.UniverseListFragment"
        tools:layout="@layout/fragment_universe_list"/>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container"
        android:name="com.example.sheila.sci_fi.CharacterDetailFragment"
        tools:layout="layout/fragment_character_detail"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
